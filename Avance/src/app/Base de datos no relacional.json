{
  "colecciones": {
    "usuarios": {
      "uid": "",                      // Identificador único del usuario
      "nombre": "",                   // Nombre del usuario
      "apellidoPaterno": "",          // Apellido paterno
      "apellidoMaterno": "",          // Apellido materno
      "rut": "",                      // RUT del usuario
      "direccion": "",                // Dirección del usuario (para acreditación)
      "documento": "",                // Documento para acreditar el domicilio (solo uno, sin tipo ni URL)
      "foto": "",                     // Foto del carnet de identidad (solo una)
      "email": "",                    // Correo electrónico
      "telefono": "",                 // Número de teléfono
      "estado": "pendiente",          // Estado de la cuenta (pendiente/activo)
      "rol": "Usuario Registrado"     // Rol del usuario (por defecto al registrarse)
    },
    "actividades": {
      "id": "",                       // Identificador único de la actividad
      "titulo": "",                   // Título de la actividad
      "descripcion": "",              // Descripción de la actividad
      "fechaCreacion": "DD-MM-YYYY",  // Fecha en que se creó la actividad
      "fechaEvento": "DD-MM-YYYY",    // Fecha del evento
      "horaEvento": "",               // Hora del evento
      "cantidadMax": 3,               // Cantidad máxima de participantes por actividad (máximo 3 incluyendo al usuario)
      "cantidadDisponible": 3,        // Cantidad de cupos disponibles
      "participantes": [              // Usuarios que se inscribieron en la actividad
        {
          "uid": "usuario_1_uid",           // Relación con el usuario (ID único del usuario)
          "nombre": "Juan",                 // Nombre del usuario (opcional)
          "fechaInscripcion": "DD-MM-YYYY", // Fecha en que se inscribió
          "cantidadParticipantes": 2        // Cantidad de participantes (máximo 3)
        }
      ],
      "image": ""                     // URL de la imagen relacionada
    },
    "espaciosPublicos": {
      "id": "",                       // Identificador único del espacio
      "titulo": "",                   // Título del espacio
      "descripcion": "",              // Descripción del espacio
      "ubicacion": "",                // Ubicación del espacio
      "fechaCreacion": "DD-MM-YYYY",  // Fecha de creación
      "image": "",                    // URL de la imagen
      "fechasReservadas": [           // Reservas para el espacio
        {
          "fecha": "DD-MM-YYYY",      // Fecha de la reserva
          "horaInicio": "HH:MM",      // Hora de inicio
          "horaFin": "HH:MM",         // Hora de fin
          "solicitante": {            // Información del usuario que solicitó el espacio
            "uid": "usuario_1_uid",   // Identificador único del usuario
            "nombre": "Ana",          // Nombre del solicitante (opcional)
            "fechaSolicitud": "DD-MM-YYYY" // Fecha en que se realizó la solicitud
          }
        }
      ]
    },
    "noticias": {
      "id": "",                       // Identificador único de la noticia
      "title": "",                    // Título de la noticia
      "subtitle": "",                 // Subtítulo (opcional)
      "details": "",                  // Detalles de la noticia
      "date": "DD-MM-YYYY",           // Fecha de publicación
      "image": ""                     // URL de la imagen
    },
    "proyectos": {
      "id": "",                       // Identificador único del proyecto
      "titulo": "",                   // Título del proyecto
      "descripcion": "",              // Descripción del proyecto
      "fechaCreacion": "DD-MM-YYYY",  // Fecha de creación
      "fechaInicio": "DD-MM-YYYY",    // Fecha de inicio
      "fechaFin": "DD-MM-YYYY",       // Fecha de fin
      "estado": "activo",             // Estado del proyecto (activo/inactivo)
      "maxPostulantes": 10,           // Máximo de postulantes
      "minPostulantes": 1,            // Mínimo de postulantes
      "documentosRequeridos": [       // Lista de documentos requeridos
        {
          "nombre": "Certificado de residencia", // Nombre del documento requerido
          "tipo": "pdf"                          // Tipo de documento (opcional)
        }
      ],
      "postulantes": [                // Usuarios que se han postulado al proyecto
        {
          "uid": "usuario_2_uid",                // Identificador del postulante
          "nombre": "Carlos",                    // Nombre del postulante
          "documentosSubidos": [                 // Lista de documentos que el postulante ha subido
            {
              "documentoId": "doc_1",            // Identificador del documento subido
              "nombre": "certificado_residencia",// Nombre del documento subido
              "tipo": "pdf",                     // Tipo del documento (opcional)
              "url": "http://ejemplo.com/doc.pdf"// URL del documento subido
            }
          ]
        }
      ]
    }
  }
}


